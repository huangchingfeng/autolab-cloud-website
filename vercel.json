{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build:frontend && ls -R dist/public/ | head -100",
  "outputDirectory": "dist/public",
  "functions": {
    "api/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/404.html" }
  ]
}
