{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build:frontend",
  "outputDirectory": "dist/public",
  "functions": {
    "api/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "trailingSlash": true,
  "cleanUrls": true,
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/test", "dest": "/api/test" },
    { "src": "/api/(.*)", "dest": "/api" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
