{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build:frontend",
  "outputDirectory": "dist/public",
  "functions": {
    "api/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "routes": [
    { "src": "/name_card/?$", "dest": "/name_card/index.html" },
    { "src": "/name_card/(.*)", "dest": "/name_card/$1" },
    { "src": "/gifts/(.*)", "dest": "/gifts/$1" },
    { "src": "/api/test", "dest": "/api/test" },
    { "src": "/api/(.*)", "dest": "/api" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
